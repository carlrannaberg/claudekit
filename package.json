{
  "name": "claudekit",
  "version": "0.8.7",
  "description": "CLI tools for Claude Code development workflow",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "claudekit": "./bin/claudekit",
    "claudekit-hooks": "./bin/claudekit-hooks"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run clean && npm run build:main && npm run build:hooks && npm run build:esm && npm run build:types",
    "validate:deps": "node scripts/validate-dependencies.js",
    "validate:build": "npm run build && npm run validate:deps",
    "validate:install": "./scripts/test-clean-install.sh",
    "prepublish:validate": "npm run lint && npm run typecheck && npm run validate:build && npm run validate:install && npm run test",
    "build:main": "esbuild cli/cli.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/cli.cjs --external:react-devtools-core --external:oh-my-logo --sourcemap --log-level=error",
    "build:hooks": "esbuild cli/hooks-cli.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/hooks-cli.cjs --external:react-devtools-core --sourcemap --log-level=error",
    "build:esm": "esbuild cli/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/index.cjs --external:react-devtools-core --external:oh-my-logo --sourcemap --log-level=error",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build:hooks-dev": "tsc cli/hooks-cli.ts --outDir dist --module esnext --target es2022 --moduleResolution node --skipLibCheck",
    "build:config": "tsx build.config.ts",
    "clean": "rm -rf dist",
    "dev": "tsx watch cli/cli.ts",
    "test": "npm run test:vitest && npm run test:bash",
    "test:vitest": "vitest run",
    "test:bash": "./tests/run-tests.sh",
    "test:ci": "npm run test:vitest -- --coverage && npm run test:bash",
    "test:watch": "vitest run --watch",
    "test:ui": "vitest run --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:commands": "vitest run tests/commands",
    "test:utils": "vitest run tests/utils",
    "test:mocks": "vitest run tests/mocks",
    "test:fast": "vitest run tests/unit tests/lib tests/hooks tests/mocks tests/commands tests/config --no-coverage",
    "test:verbose": "VERBOSE_TESTS=true vitest run",
    "coverage:check": "VERBOSE_TESTS=true vitest run --coverage",
    "coverage:threshold": "vitest run --coverage --reporter=json --outputFile.json=./coverage/coverage-summary.json",
    "lint": "eslint . --ext .ts",
    "lint:subagents": "./bin/claudekit lint-subagents src/agents",
    "lint:commands": "./bin/claudekit lint-commands src/commands",
    "format": "prettier --write \"cli/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"cli/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release:patch": "./scripts/prepare-release.sh --type patch",
    "release:minor": "./scripts/prepare-release.sh --type minor",
    "release:major": "./scripts/prepare-release.sh --type major",
    "symlinks": "./scripts/create-symlinks.sh"
  },
  "dependencies": {
    "@carlrannaberg/cclint": "^0.2.7",
    "@inquirer/prompts": "^7.6.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "ignore": "^5.3.2",
    "is-path-inside": "^4.0.0",
    "oh-my-logo": "^0.2.1",
    "ora": "^8.2.0",
    "picocolors": "^1.1.0",
    "picomatch": "^4.0.3",
    "untildify": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.6",
    "@types/picomatch": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "cli",
    "claudekit",
    "claude",
    "development",
    "workflow"
  ],
  "author": "",
  "license": "MIT"
}
